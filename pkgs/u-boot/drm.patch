+			goto err;
+
+		remote = of_find_node_by_phandle(NULL, phandle);
+		if (!remote)
+			goto err;
+
+		val = ofnode_read_u32_default(np_to_ofnode(remote), "reg", -1);
+		if (val < 0)
+			goto err;
+	}
+
+	return val;
