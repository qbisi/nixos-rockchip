+			   u8 reg, const u8 *buf, u8 len)
+{
+	int i, ret;
+
+	for (i = 0; i < len; i++) {
+		ret = rk1000_ctl_i2c_write(rk1000_ctl, reg + i, buf[i]);
+		if (ret)
+			break;
+	}
+
+	return ret;
+}
