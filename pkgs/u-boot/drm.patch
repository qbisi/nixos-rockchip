+static void hdptx_update_bits(struct rockchip_hdptx_phy *hdptx, uint reg,
+			      uint mask, uint val)
+{
+	uint orig, tmp;
+
+	orig = hdptx_read(hdptx, reg);
+	tmp = orig & ~mask;
+	tmp |= val & mask;
+	hdptx_write(hdptx, reg, tmp);
+}
