+static void dw_mipi_dsi_vop_routing(struct dw_mipi_dsi *dsi, int vop_id)
+{
+	grf_field_write(dsi, VOPSEL, vop_id);
+
+	if (dsi->slave)
+		grf_field_write(dsi->slave, VOPSEL, vop_id);
+}
