+static u32 inno_hdmi_phy_get_tmdsclk(struct inno_hdmi_phy *inno,
+				     unsigned long rate)
+{
+	u32 tmdsclk;
+
+	switch (inno->bus_width) {
+	case 4:
+		tmdsclk = (u32)rate / 2;
+		break;
+	case 5:
+		tmdsclk = (u32)rate * 5 / 8;
+		break;
+	case 6:
+		tmdsclk = (u32)rate * 3 / 4;
+		break;
+	case 10:
+		tmdsclk = (u32)rate * 5 / 4;
+		break;
+	case 12:
+		tmdsclk = (u32)rate * 3 / 2;
+		break;
+	case 16:
+		tmdsclk = (u32)rate * 2;
+		break;
+	default:
+		tmdsclk = rate;
+	}
+
+	return tmdsclk;
+}
