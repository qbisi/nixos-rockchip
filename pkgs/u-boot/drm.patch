+	memcpy(&logo_cache->logo, logo, sizeof(*logo));
+
+	flush_dcache_range((ulong)dst, ALIGN((ulong)dst + dst_size, CONFIG_SYS_CACHELINE_SIZE));
+
+free_header:
+
+	free(header);
+
+	return ret;
+#else
+	return -EINVAL;
+#endif
