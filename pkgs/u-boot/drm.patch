+static inline void phy_update_bits(struct samsung_mipi_dcphy *samsung,
+				   u32 reg, u32 mask, u32 val)
+{
+	u32 orig, tmp;
+
+	orig = phy_read(samsung, reg);
+	tmp = orig & ~mask;
+	tmp |= val & mask;
+	phy_write(samsung, reg, tmp);
+}
