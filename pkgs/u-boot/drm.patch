+void analogix_dp_enable_enhanced_mode(struct analogix_dp_device *dp,
+				      bool enable)
+{
+	u32 reg;
+
+	if (enable) {
+		reg = analogix_dp_read(dp, ANALOGIX_DP_SYS_CTL_4);
