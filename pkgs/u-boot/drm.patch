+                            (bmp->bpp != 8) &&
+                            (bmp->bpp != 16) &&
+                            (bmp->bpp != 24) &&
+                            (bmp->bpp != 32))
+                                return BMP_DATA_ERROR;
+                        break;
+                case BMP_ENCODING_RLE8:
+                        if (bmp->bpp != 8)
+                                return BMP_DATA_ERROR;
+                        break;
+                case BMP_ENCODING_RLE4:
+                        if (bmp->bpp != 4)
+                                return BMP_DATA_ERROR;
+                        break;
+                case BMP_ENCODING_BITFIELDS:
+                        if ((bmp->bpp != 16) && (bmp->bpp != 32))
+                                return BMP_DATA_ERROR;
+                        break;
