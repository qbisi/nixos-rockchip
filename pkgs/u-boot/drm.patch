+	phy_write(samsung, COMBO_MD0_TIME_CON4, 0x1f4);
+	phy_write(samsung, COMBO_MD1_TIME_CON4, 0x1f4);
+	phy_write(samsung, COMBO_MD2_TIME_CON4, 0x1f4);
+	phy_write(samsung, DPHY_MD3_TIME_CON4, 0x1f4);
