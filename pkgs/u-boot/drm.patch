+static void dw_mipi_dsi_connector_unprepare(struct rockchip_connector *conn,
+					    struct display_state *state)
+{
+	struct dw_mipi_dsi *dsi = dev_get_priv(conn->dev);
+
+	dw_mipi_dsi_post_disable(dsi);
+}
