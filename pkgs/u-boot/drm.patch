+	struct dm_i2c_chip *chip = dev_get_parent_platdata(rk1000_ctl->dev);
+	u8 data;
+	struct i2c_msg msg[] = {
+		{
+			.addr = chip->chip_addr,
+			.flags = 0,
+			.buf = (u8 *)&reg,
+			.len = 1,
+		}, {
+			.addr = chip->chip_addr,
+			.flags = I2C_M_RD,
+			.buf = (u8 *)&data,
+			.len = 1,
+		}
+	};
+	int ret;
+
+	ret = dm_i2c_xfer(rk1000_ctl->dev, msg, 2);
+	if (ret) {
