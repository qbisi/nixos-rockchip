+	mask = PHY_STOPSTATELANE;
+	ret = readl_poll_timeout(dsi->base + DSI_PHY_STATUS,
+				 val, (val & mask) == mask,
+				 PHY_STATUS_TIMEOUT_US);
+	if (ret < 0) {
+		dev_err(dsi->dev, "lane module is not in stop state\n");
+		return ret;
+	}
+
+	udelay(10);
+
+	return 0;
+}
