+	dm_gpio_set_value(&rk1000_ctl->reset_gpio, 0);
+	mdelay(1);
+	dm_gpio_set_value(&rk1000_ctl->reset_gpio, 1);
+	mdelay(1);
+	dm_gpio_set_value(&rk1000_ctl->reset_gpio, 0);
