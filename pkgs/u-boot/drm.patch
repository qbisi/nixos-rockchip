+/* Register: 0x0030 */
+#define DISABLE_PLL	BIT(3)
+/* Register: 0x003c */
+#define PLL_LOCK	BIT(1)
+/* Register: 0x0084 */
+#define ENABLE_TX	BIT(7)
+
+struct inno_video_phy {
+	void __iomem *base;
+	enum phy_mode mode;
+	bool dual_channel;
