+	vop2_mask_write(vop2, RK3588_VP0_CLK_CTRL + vp_offset, 0x3,
+			DCLK_CORE_DIV_SHIFT, cstate->dclk_core_div, false);
+	vop2_mask_write(vop2, RK3588_VP0_CLK_CTRL + vp_offset, 0x3,
+			DCLK_OUT_DIV_SHIFT, cstate->dclk_out_div, false);
