+void analogix_dp_reset_macro(struct analogix_dp_device *dp)
+{
+	u32 reg;
+
+	reg = analogix_dp_read(dp, ANALOGIX_DP_PHY_TEST);
+	reg |= MACRO_RST;
+	analogix_dp_write(dp, ANALOGIX_DP_PHY_TEST, reg);
