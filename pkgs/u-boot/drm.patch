+static void dw_mipi_dsi_line_timer_config(struct dw_mipi_dsi *dsi)
+{
+	int htotal, hsa, hbp, lbcc;
+	struct drm_display_mode *mode = &dsi->mode;
+
+	htotal = mode->htotal;
+	hsa = mode->hsync_end - mode->hsync_start;
+	hbp = mode->htotal - mode->hsync_end;
