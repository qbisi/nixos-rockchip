+	static bool __print_once = false;
+#ifdef CONFIG_SPL_BUILD
+	struct spl_display_info *spl_disp_info = (struct spl_display_info *)CONFIG_SPL_VIDEO_BUF;
+#endif
+	if (!__print_once) {
+		__print_once = true;
